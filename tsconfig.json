{    
    "compileOnSave": true,
    "compilerOptions": {
        "alwaysStrict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "noEmitOnError": true, //Always Set this to true
        "noImplicitAny": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "baseUrl": ".", // This must be specified if "paths" is.
        "paths": {
            "pathMap/*" : ["./src/mixins/*"]
        },
        "sourceMap": true,
        "target": "es5"  
    },
    "include": [
        "src/**/*"
    ]
}